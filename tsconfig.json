{
  "compilerOptions": {
    "module": "NodeNext", // or "Node16", "ESNext"
    "moduleResolution": "NodeNext", // Must match "module"
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}